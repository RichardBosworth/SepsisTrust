<?xml version="1.0" encoding="UTF-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:global="clr-namespace:;assembly=SepsisTrust"
             xmlns:iconize="clr-namespace:FormsPlugin.Iconize;assembly=FormsPlugin.Iconize"
             xmlns:behaviours="clr-namespace:SepsisTrust.Behaviours;assembly=SepsisTrust"
             x:Class="SepsisTrust.GuidelineUI.Views.GuidelineTitleBlockView"
             Padding="20"
             Margin="0,0,0,10"
             BackgroundColor="{StaticResource OrangeBaseColor}">
    <ContentView.Content>
        <StackLayout Spacing="10">
            <!--<iconize:IconImage Icon="{Binding Block.EntityIconName}" IconSize="64" IconColor="White" />-->
            <Label Style="{DynamicResource TitleLabelStyle}" VerticalTextAlignment="Center" Text="{Binding BlockTitle}" />
            <Label Style="{DynamicResource BodyLabelStyle}" TextColor="White" VerticalTextAlignment="Center"
                   Text="{Binding InstructionalText}" />
        </StackLayout>
    </ContentView.Content>
</ContentView>