<?xml version="1.0" encoding="UTF-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SepsisTrust.GuidelineUI.Views.SummaryBlockTemplate">

    <ContentView.Content>

        <StackLayout Style="{StaticResource DefaultStackLayoutStyle}">
            <Image Source="{Binding Block.SummaryImagePath}" HeightRequest="64" WidthRequest="64" Aspect="AspectFit" />
            <Label Text="{Binding Block.Title}" Style="{StaticResource TitleLabelStyle}" />
            <Label Text="{Binding Block.SummaryText}" />
        </StackLayout>

    </ContentView.Content>
</ContentView>