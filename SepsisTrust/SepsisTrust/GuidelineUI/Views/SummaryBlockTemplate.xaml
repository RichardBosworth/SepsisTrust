<?xml version="1.0" encoding="UTF-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SepsisTrust.GuidelineUI.Views.SummaryBlockTemplate">


    
    <ContentView.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout Margin="80">
                <Image Source="{Binding Block.SummaryImagePath}" HeightRequest="64" WidthRequest="64"
                       Aspect="AspectFit" VerticalOptions="FillAndExpand"/>
                <Label Text="Hello" Style="{StaticResource TitleLabelStyle}" VerticalOptions="FillAndExpand" />
                <Label Text="{Binding Block.SummaryText}" VerticalOptions="FillAndExpand" />
            </StackLayout>
        </StackLayout>

    </ContentView.Content>
</ContentView>